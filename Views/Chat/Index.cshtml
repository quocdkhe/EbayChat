@{
    Layout = null;
    var chatUsers = ViewBag.Chats as IEnumerable<dynamic>;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tin nhắn của bạn</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f3f3f3;
            font-family: Arial, sans-serif;
        }
        .chat-container {
            display: flex;
            height: 90vh;
            width: 95%;
            max-width: 600px;
            margin: 30px auto;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .sidebar {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        .sidebar-header {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            background: #f8f8f8;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .sidebar-header h5 {
            margin: 0;
            font-weight: 600;
            font-size: 16px;
        }
        .sidebar-header a {
            font-size: 14px;
            text-decoration: none;
            color: #007bff;
        }
        .sidebar-body {
            flex: 1;
            overflow-y: auto;
        }
        .chat-item {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
            cursor: pointer;
            transition: background 0.2s;
            text-decoration: none;
            color: inherit;
        }
        .chat-item:hover {
            background: #f5f5f5;
        }
        .chat-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: #ddd;
            color: #555;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 18px;
            margin-right: 12px;
            overflow: hidden;
        }
        .chat-info {
            flex: 1;
            overflow: hidden;
        }
        .chat-info h6 {
            margin: 0;
            font-size: 15px;
            font-weight: 600;
        }
        .chat-info p {
            margin: 2px 0 0;
            color: #666;
            font-size: 13px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .empty-state {
            padding: 30px 15px;
            text-align: center;
            color: #888;
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <h5><i class="fas fa-comments"></i> Tin nhắn</h5>
                <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Trang chủ</a>
            </div>
            <div class="sidebar-body">
                @if (chatUsers != null && chatUsers.Any())
                {
                    foreach (var u in chatUsers)
                    {
                        <a href="@Url.Action("Chat", "Chat", new { receiverId = u.PartnerId })" class="chat-item">
                            <div class="chat-avatar">
                                @u.PartnerName.Substring(0,1).ToUpper()
                            </div>
                            <div class="chat-info">
                                <h6>@u.PartnerName</h6>
                                <p>@(string.IsNullOrEmpty(u.LastMessage) ? "(Chưa có tin nhắn)" : u.LastMessage)</p>
                            </div>
                        </a>
                    }
                }
                else
                {
                    <div class="empty-state">Chưa có cuộc trò chuyện nào</div>
                }
            </div>
        </div>
    </div>
</body>
</html>
