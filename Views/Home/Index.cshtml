@using EbayChat.Entities

@{
	ViewData["Title"] = "Home Page";
	var products = ViewBag.Products as List<Product>;
	var categories = ViewBag.Categories as List<Category>;
}

<hr class="custom-hr">

<div class="container">
	<div class="custom-links">
		<div class="btn-group dropdown">
			<div>
				<a asp-controller="Home" asp-action="Index" class="btn home-link">
					Home
				</a>
			</div>

			<div class="innerdropdown">

				<button class="btn custom-link" aria-expanded="false">
					Saved
				</button>

			</div>
			@foreach (var category in categories)
			{
				<div>
					<a class="btn custom-link" asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.id">
						@category.name
					</a>
				</div>
			}

		</div>
	</div>
	<div lc-helper="background" class="container-fluid py-5 mb-4 d-flex justify-content-center" style="  
background-image: url('../Assets/images/3.png');
    background-position: center;
background-size:cover;
background-repeat:no-repeat">
		<div class="p-5 mb-4 lc-block col-xxl-7 col-lg-8 col-12" style=" backdrop-filter: blur(6px) saturate(102%);
    -webkit-backdrop-filter: blur(6px) saturate(102%);
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    border: 1px solid rgba(209, 213, 219, 0.3);">
			<div class="lc-block">
				<div editable="rich">
					<h2 class="fw-bolder display-3">It's all for the road</h2>
				</div>
			</div>
			<div class="lc-block col-md-8">
				<div editable="rich">
					<p class="lead">
						Find the parts and accessories you need on eBay.
					</p>
				</div>
			</div>
			<div class="lc-block">
				<a class="btn btn-dark" href="#" role="button">Explore offers</a>
			</div>
		</div>
	</div>


	<div>
		<h3 class="custom-header">Today's Deals-All With Frees Shipping</h3>
		<hr class="custom-hr">

	</div>


	<div class="row row-cols-2 row-cols-sm-3 row-cols-lg-5 g-4" id="cardGroup">
		<!-- mỗi card nằm trong một .col -->
		@foreach (var product in products)
		{
		<div class="col">
			<!-- d-block + h-100 để link chiếm hết card, không phá grid -->
			<a asp-controller="Product" asp-action="Detail" asp-route-id="@product.id" class="d-block h-100 text-decoration-none text-reset">
				<div class="card h-100 shadow-sm">
					<div class="position-relative">
						<img src="@product.images" class="card-img-top" alt="@product.title" />
					</div>
					<div class="card-body p-2">
						<p class="small mb-1 text-truncate">@product.title</p>
						<strong>@String.Format("{0:N0}", product.price) $</strong>
					</div>
				</div>
			</a>
		</div>
		}
	</div>

</div>

<hr>
