	<div>
		<h3 class="custom-header">Today's Deals-All With Frees Shipping</h3>
		<h6 class="custom-see-all">see all</h6>
	</div>


	<div class="row row-cols-2 row-cols-sm-3 row-cols-lg-5 g-4" id="cardGroup">
		<!-- mỗi card nằm trong một .col -->
		<div class="col">
			<!-- d-block + h-100 để link chiếm hết card, không phá grid -->
			<a class="d-block h-100 text-decoration-none text-reset">

				<div class="card h-100 shadow-sm">

					<div class="position-relative">
						<img src="" class="card-img-top" alt="" />

						<!-- nút save -->
						<button class="btn p-0 border-0 position-absolute top-0 end-0 m-2"
								onclick="heartFunction()" type="button">
							<i class="bi bi-heart-fill text-white"></i>
						</button>
					</div>

					<div class="card-body p-2">
						<p class="small mb-1 text-truncate">ABC</p>
						<strong>100 $</strong>
					</div>

				</div>
			</a>
		</div>
	</div>

	<div class="container custom-container custom-slide-three-image">
		<h1>It's all for the road</h1>
		<p>Find the parts and accessories you need on eBay.</p>
		<button onclick="fetchCategory(18)" type="button" style="background-color: transparent; color: #ffffff; border: 1px solid #ffffff; transition: background-color 0.3s ease, color 0.3s ease;"
				onmouseover="this.style.backgroundColor='white'; this.style.color='black';"
				onmouseout="this.style.backgroundColor='transparent'; this.style.color='#ffffff';">
			Explore offers
		</button>
	</div>

