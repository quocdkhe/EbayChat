
@model List<EbayChat.Entities.Dispute>

@{
    ViewData["Title"] = "My Disputes";
    var success = TempData["SuccessMessage"] as string;
    var error = TempData["ErrorMessage"] as string;
}
<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">eBay</a></li>
		<li class="breadcrumb-item">
			<a asp-controller="Order" asp-action="MyOrders">My orders</a>
		</li>
		<li class="breadcrumb-item active">
			<a asp-controller="Dispute" asp-action="SentDisputes">My disputes</a>
		</li>
	</ol>
</nav>
@if (!string.IsNullOrEmpty(error))
{
	<div class="alert alert-danger">@error</div>
}
@if (!string.IsNullOrEmpty(success))
{
	<div class="alert alert-success">@success</div>
}
<div class="container mt-4">
    
    <h3 class="mb-3">My Disputes</h3>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-light border">You haven't submitted any disputes.</div>
    }
    else
    {
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Order</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Resolution</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.id</td>
                        <td>@d.orderId</td>
                        <td>@d.description</td>
                        <td>
                            @if (d.status?.ToLower() == "open")
                            {
                                <span class="badge bg-warning">@d.status</span>
                            }
                            else if (d.status?.ToLower() == "in progress")
                            {
                                <span class="badge bg-primary">@d.status</span>
                            }
                            @if (d.status?.ToLower() == "resolved")
                            {
                                <span class="badge bg-success">@d.status</span>
                            }
                            else if (d.status?.ToLower() == "closed")
                            {
                                <span class="badge bg-danger">@d.status</span>
                            }
                        </td>
                        <td>@d.resolution</td>
                        <td>
                            @if (d.status?.ToLower() == "open" || d.status?.ToLower() == "in progress")
                            {
                                <button class="btn btn-sm btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editDescriptionModal"
                                        data-id="@d.id"
                                        data-description="@d.description">
                                    Edit
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">Locked</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- MODAL: Edit Description -->
<div class="modal fade" id="editDescriptionModal" tabindex="-1" aria-labelledby="editDescriptionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="UpdateDescription" asp-controller="Dispute" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Dispute Description</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="disputeId" name="id" />
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea id="disputeDesc" name="description" class="form-control" rows="3" required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const modal = document.getElementById('editDescriptionModal');
        modal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const desc = button.getAttribute('data-description');
            document.getElementById('disputeId').value = id;
            document.getElementById('disputeDesc').value = desc;
        });
    </script>
}
